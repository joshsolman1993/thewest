# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database (SQLite for development)
DATABASE_TYPE=sqlite
DATABASE_PATH=dust.sqlite

# Database (PostgreSQL for production)
# Uncomment and configure when ready to switch to PostgreSQL
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=dust_user
# DATABASE_PASSWORD=your_password_here
# DATABASE_NAME=dust_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-strong-random-string
JWT_EXPIRATION=24h

# CORS
CORS_ORIGIN=http://localhost:5173

# Application Features
ENABLE_SWAGGER=true
